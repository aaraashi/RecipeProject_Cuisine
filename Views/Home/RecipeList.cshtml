@model IEnumerable<Recipe>
@{
    ViewBag.Title = "Recipe List";
}

<nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
    <div><img src="~/images/recipe_logo.png" width="50" /></div>
    <div class="container">
        <a class="navbar-brand text-uppercase text-expanded font-weight-bold d-lg-none" href="#">Fresh Table</a>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item px-lg-4">
                    <a class="nav-link text-uppercase text-expanded" asp-action="Index">
                        Home
                    </a>
                </li>
                <li class="nav-item active px-lg-4">
                    <a class="nav-link text-uppercase text-expanded" asp-action="RecipeList">
                        Recipe List
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                @*<li class="nav-item px-lg-4">
                    <a class="nav-link text-uppercase text-expanded" asp-action="CreateRecipe">Add Recipe</a>
                </li>*@
            </ul>
        </div>
    </div>
</nav>

@if (TempData["message"] != null)
{
    <div class="alert alert-suceess mt-1">@TempData["message"]</div>
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="product-item-title d-flex w-100 mt-5 justify-content-xl-center">
                    <div class="recipe-box rounded">
                        @foreach (var r in Model)
                        {
                            <div class="recipe-box-div">
                                <ul class="list-group text-center list-unstyled">
                                    <li class="recipe-list"><a asp-action="ViewRecipe">@Html.ActionLink(r.Name, "ViewRecipe", "Recipes", new { id = r.Id }, null)</a></li>
                                    @*<li class="recipe-list"><a asp-action="ViewRecipe">@r.Name</a><li>*@
                                <li>
                                    <a class="review-link" asp-action="ReviewRecipe">Review</a>
                                    @*<form asp-action="DeleteRecipe" method="post">

                                        <a asp-action="EditRecipe" class="edit-link" asp-route-recipeId="@r.Id">Edit</a>

                                        <input type="hidden" value="@r.Id" name="recipeId" />
                                        <button type="submit" class="delete-link">Delete</button>
                                    </form>*@
                                </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


