@model RecipeReview

@{
    ViewBag.Title = "Review Recipe";
}

    <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
        <div><img src="~/images/recipe_logo.png" width="50" /></div>
        <div class="container">
            <a class="navbar-brand text-uppercase text-expanded font-weight-bold d-lg-none" href="#">Fresh Table</a>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item px-lg-4">
                        <a class="nav-link text-uppercase text-expanded" asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li class="nav-item active px-lg-4">
                        <a class="nav-link text-uppercase text-expanded" asp-action="RecipeList">
                            Recipe List
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item px-lg-4">
                        <a class="nav-link text-uppercase text-expanded" asp-action="CreateRecipe">Add Recipe</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="page-section cta">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto box-bg">
                    <div class="box-style text-center rounded">
                        <h2 class="section-heading mb-4">
                            <span class="section-heading-medium">Your review is important to us</span>
                        </h2>
                        <div class="panel panel-success">
                            <div class="panel-body">
                                <form class="p-a-1" asp-action="ReviewRecipe" method="Post">
                                    <div class="form-group">
                                            <label>Username</label>
                                            <input class="username" asp-for="Username"/>
                                    </div>
                                    <div class="form-group">
                                        <textarea name="message" rows="10" asp-for="Comment" class="review-box">Please leave your comment here</textarea>
                                    </div>
                                    <div class="text-center">
                                        <button class="btn btn-primary" type="submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
